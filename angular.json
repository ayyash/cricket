{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "defaultProject": "cricketweb",
    "projects": {
        "cricketweb": {
            "root": "",
            "sourceRoot": "src",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "less"
                },
                "@schematics/angular:application": {
                    "strict": true
                }
            },
            "projectType": "application",
            "prefix": "cr",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "outputPath": "dist",
                        "resourcesOutputPath": "assets/",
                        "allowedCommonJsDependencies": [
                            "lodash",
                            "express"
                        ],
                        "baseHref": "/en/",
                        "index": "src/index.html",
                        "main": "src/main.ts",
                        "polyfills": "src/polyfills.ts",
                        "tsConfig": "tsconfig.app.json",
                        "assets": [
                            {
                                "glob": "cricket_favicon.png",
                                "input": "src",
                                "output": "/"
                            },
                            {
                                "glob": "images/**/*",
                                "input": "src/assets",
                                "output": "/assets"
                            },
                            {
                                "glob": "*.js",
                                "input": "src/locale",
                                "output": "/locale"
                            }
                        ],
                        "styles": [
                            {
                                "input": "src/assets/css/cricket.critical.css",
                                "bundleName": "critical"
                            },
                            {
                                "input": "src/assets/css/cricket.general.css",
                                "bundleName": "styles",
                                "lazy": true
                            }
                        ],
                        "stylePreprocessorOptions": {
                            "includePaths": [
                                "./mockup/less",
                                "./node_modules/shut/src/less"
                            ]
                        },
                        "scripts": [
                            {
                                "input": "src/assets/js/cricket.js",
                                "bundleName": "cricket"
                            }
                        ]
                    },
                    "configurations": {
                        "serve": {
                            "buildOptimizer": false,
                            "optimization": false,
                            "vendorChunk": true,
                            "extractLicenses": false,
                            "sourceMap": true,
                            "namedChunks": true,
                            "commonChunk": true,
                            "aot": true,
                            "index": "src/index.dev.html",
                            "styles": [
                                {
                                    "input": "src/assets/css/cricket.css",
                                    "bundleName": "styles"
                                }
                            ]
                        },
                        "network": {
                            "namedChunks": true,
                            "vendorChunk": false,
                            "commonChunk": true,
                            "aot": true,
                            "sourceMap": true,
                            "index": "src/index.dev.html",
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.network.ts"
                                }
                            ],
                            "styles": [
                                {
                                    "input": "src/assets/css/cricket.css",
                                    "bundleName": "styles"
                                }
                            ]
                        },
                        "serveProduction": {
                            "namedChunks": true,
                            "vendorChunk": false,
                            "commonChunk": true,
                            "optimization": false,
                            "aot": true,
                            "sourceMap": true,
                            "index": "src/index.dev.prod.html",
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.prod.ts"
                                }
                            ]
                        },
                        "production": {
                            "outputPath": "../cricket.host/views/",
                            "baseHref": "/$lang/",
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.prod.ts"
                                }
                            ],
                            "optimization": true,
                            "outputHashing": "all",
                            "sourceMap": false,
                            "namedChunks": false,
                            "aot": true,
                            "extractLicenses": true,
                            "vendorChunk": false,
                            "buildOptimizer": true,
                            "deleteOutputPath": true,
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "500kb",
                                    "maximumError": "1mb"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "2kb",
                                    "maximumError": "4kb"
                                }
                            ]
                        }
                    }
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "options": {
                        "browserTarget": "cricketweb:build:serve",
                        "proxyConfig": "proxy.conf.json"
                    },
                    "configurations": {
                        "network": {
                            "browserTarget": "cricketweb:build:network"
                        },
                        "production": {
                            "browserTarget": "cricketweb:build:serveProduction"
                        }
                    }
                },
                "server": {
                    "builder": "@angular-devkit/build-angular:server",
                    "options": {
                        "outputPath": "dist",
                        "main": "src/main.server.ts",
                        "tsConfig": "tsconfig.server.json",
                        "stylePreprocessorOptions": {
                            "includePaths": [
                                "./mockup/less",
                                "./node_modules/shut/src/less"
                            ]
                        }
                    },
                    "configurations": {
                        "production": {
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.prod.ts"
                                }
                            ],
                            "optimization": true,
                            "outputHashing": "media",
                            "sourceMap": false,
                            "namedChunks": true,
                            "extractLicenses": true,
                            "vendorChunk": true,
                            "deleteOutputPath": true
                        }
                    }
                },
                "serve-ssr": {
                    "builder": "@nguniversal/builders:ssr-dev-server",
                    "options": {
                        "browserTarget": "cricketweb:build",
                        "serverTarget": "cricketweb:server"
                    },
                    "configurations": {
                        "production": {
                            "browserTarget": "cricketweb:build:production",
                            "serverTarget": "cricketweb:server:production"
                        }
                    }
                }
            }
        }
    }
}
